<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/fill_wrap"
	android:background="#33af86"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="@dimen/dimen_40_dip"
		android:paddingLeft="@dimen/dimen_12_dip"
		android:paddingRight="@dimen/dimen_12_dip">

		<RelativeLayout
			android:id="@+id/top_bar_left_rl"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">

			<ImageView
				android:id="@+id/top_bar_left_img_iv"
				android:layout_width="@dimen/dimen_24_dip"
				android:layout_height="@dimen/dimen_24_dip"
				android:layout_centerVertical="true"
				android:scaleType="centerCrop"
				/>

			<TextView
				android:id="@+id/top_bar_left_title_tv"
				style="@style/wrap_wrap"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/dimen_5_dip"
				android:layout_toRightOf="@+id/top_bar_left_img_iv"
				android:background="@null"
				android:text="返回"
				android:textColor="#ffffff"
				android:textSize="17sp"
				android:visibility="gone" />
		</RelativeLayout>

		<Button
			android:id="@+id/top_bar_right_bt"
			style="@style/wrap_wrap"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@null"
			android:textColor="#ffffff"
			android:textSize="15sp"
			android:visibility="invisible" />

		<TextView
			android:id="@+id/top_bar_title_tv"
			style="@style/wrap_wrap"
			android:layout_centerInParent="true"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="#ffffff"
			android:textSize="18sp" />
	</RelativeLayout>

</LinearLayout>
